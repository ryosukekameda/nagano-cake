<br><br>

<div class="container">
  <h2 class="mb-4">管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <div class="form-group row">
      <%= f.label :メールアドレス, class: 'col-sm-4 col-form-label text-right' %>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'sample@example.com', style: 'width: 400px;' %>
      </div>
    </div>
    
    <br>

    <div class="form-group row">
      <%= f.label :パスワード, class: 'col-sm-4 col-form-label text-right' %>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'パスワード', style: 'width: 400px;' %>
      </div>
    </div>
    
    <br>

    <div class="actions text-center">
      <%= f.submit "ログイン", class:"btn btn-primary", style: 'width: 200px;'  %>
    </div>
    
  <% end %>

  <%= render "admin/shared/links" %>

</div>
