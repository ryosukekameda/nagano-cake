
  <div class="row justify-content-center mt-5">
  <div class="col-md-5">
    
      <h2>商品詳細</h2>
      
      <br>
      
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300", class: "mb-4" %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "300x300", class: "mb-4"%>
      <% end %>
      
  </div>
  
  <br><br>

      <div class="col-md-7" style="margin-top: 60px;">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td><strong>商品名</strong></td>
              <td><%= @item.name %></td>
            </tr>
            
            <tr>
              <td><strong>商品説明</strong></td>
              <td><%= @item.introduction %></td>
            </tr>
  
            <tr>
              <td><strong>税込価格</strong></td>
              <td><%= (@item.price_without_tax*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
            </tr>
            
            <tr>
              <td><strong>販売ステータス</strong></td>
              <td>
                <% if @item.is_sales_status == false %>
                  <span style="color: green;">販売中</span>
                <% else %>
                  <span style="color: red;">販売停止中</span>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        
        <div class="text-center mt-4">
          <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-lg btn-success" %>
        </div>
      </div>
    </div>
