<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">商品新規登録</h4>
      
      <table class="table table-borderless">
      <%= form_with model: Item.new do |f| %>
      
        <tr>
          <th>商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
          <td></td>
        </tr>
        
         <tr>
          <th>商品名</th>
          <td><%= f.text_field :name, class:"form-contrrol" %></td>
          <td></td>
        </tr>
        
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction, class:"form-contrrol" %></td>
          <td></td>
        </tr>
        
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :add_tax_sales_price, class:"form-contrrol" %>円</td>
          <td></td>
        </tr>
        
         <tr>
          <th>販売ステータス</th>
          <td><%= f.radio_button :price %></td>
          <td></td>
        </tr>
        
        <tr>
          <td></td>
          <td><%= f.submit "新規登録", class:"btn btn-success text-right" %></td>
          <td></td>
        </tr>
        
      <% end %>
      </table>
      
    </div>
  </div>
</div>