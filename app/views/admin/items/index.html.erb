<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">商品一覧</h4>
      
        <table class="table table-hover">
          
          <thead>
            <tr class="active">
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_items_path(item) %></td>
              <td><%= item.add_tax_sales_price.to_s(:delimited) %></td>
              <td><%= item.sale_status %></td>
              <td><%= link_to "商品詳細", admin_item_path(@item) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%= paginate @items %>
    </div>
  </div>
</div>