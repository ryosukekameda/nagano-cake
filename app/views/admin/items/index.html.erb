<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h4 class="my-5">商品一覧</h4>
      
      <div class="text-right">
        <%= link_to "新規登録", new_admin_item_path, class:"btn btn-lg btn-primary" %>
      </div>
      
        <table class="table">
          <thead>
            
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ステータス</th>
            </tr>
            
          </thead>
          
          <tbody>
            
          <% @items.each do |item| %>
          
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.price_without_tax.to_s(:delimited, delimiter: ',') %></td>
              <td>
                <%= if item.is_sales_status == false %>
                  販売中
                <% else %>
                  販売停止中
                <% end %>
              </td>
            </tr>
            
          <% end %>
          <%= paginate @items %>
          </tbody>
          
        </table>
    </div>
  </div>
</div>