<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">商品一覧</h4>
      
      <div class="text-right">
        <%= link_to "新規登録", new_admin_item_path, class:"btn btn-lg btn-primary" %>
      </div>
      
        <table class="table table-hover">
          
          <thead>
            <tr class="active">
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_items_path(item) %></td>
              <td><%= item.add_tax_sales_price.to_s(:delimited, delimiter: ',') %></td>
              <td><%= if item.sale_status == false %>
                販売中
              <% else %>
                販売停止中
              <% end %>
              </td>
            </tr>
          <% end %>
          <%= paginate @items %>
          </tbody>
        </table>
    </div>
  </div>
</div>