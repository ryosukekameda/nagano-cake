
  <div class="row justify-content-center mt-5">
    <div class="col-md-10">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>商品一覧</h1>
        <%= link_to "新規登録", new_admin_item_path, class:"btn btn-primary btn-lg" %>
      </div>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td style="color: black;"><%= link_to item.name, admin_item_path(item.id), style: "color: black;" %></td>
              <td><%= item.price_without_tax.to_s(:delimited, delimiter: ',') %> 円</td>
              <td>
                <% if item.is_sales_status == false %>
                  <span style="color: green;">販売中</span>
                <% else %>
                  <span style="color: red;">販売停止中</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mt-3">
        <%= paginate @items %>
      </div>
    </div>
  </div>

