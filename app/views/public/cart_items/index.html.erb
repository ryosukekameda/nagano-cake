<br><br>

  <div class="row justify-content-center">
    
    <div class="col-xs-10">
      
      <div class="mb-4">
        <strong>
          <h4>カート内一覧</h4>
        </strong>
        <%= link_to "カート内を空にする", destroy_all_cart_items_path, method: :delete, class:"pull-right btn btn-danger float-right" %>
      </div>
      
      <br><br>
      
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th class="col-xs-3">商品名</th>
            <th class="col-xs-2">単価（税込）</th>
            <th class="col-xs-2">数量</th>
            <th class="col-xs-2">合計</th>
            <th class="col-xs-1"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="col-xs-3">
              <%= image_tag(cart_item.item.image, size: "60x60") %>
              <%= cart_item.item.name %>
            </td>
            
            <td class="col-xs-2">¥<%= ((cart_item.item.price_without_tax * 1.1).floor).to_s(:delimited, delimiter: ',') %></td>
            
            <td class="col-xs-2">
              <%= form_with model: cart_item, url: cart_item_path(cart_item) do |c| %>
              <p>
                <%= c.number_field :amount, min:1, max:10000, step:1 %>
                <%= c.submit "更新", class:"btn btn-primary" %>
              </p>
              <% end %>
            </td>
            
            <td class="col-xs-2">
              ¥<%= ((cart_item.item.price_without_tax.to_i * cart_item.amount.to_i * 1.1).floor).to_s(:delimited, delimiter: ',') %>
            </td>
            
            <td class="col-xs-1">
              <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger" %>
            </td>
            
          </tr>
          <% end %>
        </tbody>
      </table>
    
    <div class="row mt-4">
      <div class="col-xs-6">
          <%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %>
      </div>
    
    <div class="col-xs-6 text-right">
      <table class="table table-bordered">
        <tr>
          <td class="info col-xs-6"><strong>合計金額</strong></td>
          <td class="col-xs-6">¥<%= @billing_amount.floor.to_s(:delimited, delimiter: ',') %></td>
        </tr>
      </table>
    </div>
    
    <br>
     
        <% if @cart_items.present? %> 
          <div class="col-xs-12 mt-4 d-flex justify-content-center">
            <%= link_to "情報入力に進む", new_order_path, class:"col-xs-12 btn btn-success" %>
          </div>
        <% end %>
          
        </div>
      </div>
    </div>
