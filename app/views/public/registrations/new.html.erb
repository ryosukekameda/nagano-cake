<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <br><br>
  
  <div class="row">
        <label class="col-lg-3">名前</label>
        <div class="col-lg-3">
          <%= f.label :（性） %>
          <%= f.text_field :last_name, autoforcus: true, autocomplete: "last_name" %>
        </div>
        <div class="col-lg-3">
          <%= f.label :（名） %>
          <%= f.text_field :first_name, autoforcus: true, autocomplete: "first_name" %>
        </div>
      </div><br>
  
  <div class="row">
        <label class="col-lg-3">フリガナ</label>
        <div class="col-lg-3">
          <%= f.label :（セイ） %>
          <%= f.text_field :last_name_kana,autoforcus: true, autocomplete: "last_name_kana" %>
        </div>
        <div class="col-lg-3">
          <%= f.label :（メイ） %>
          <%= f.text_field :first_name_kana,autoforcus: true, autocomplete: "first_name_kana" %>
        </div>
      </div><br>
  
  
  <div class="row">
        <label class="col-lg-3">郵便番号（ハイフンなし）</label>
        <div class="col-lg-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
      </div><br>
  
  <div class="row">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-6">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"60" %>
        </div>
      </div><br>
  
  <div class="row">
        <label class="col-lg-3">電話番号（ハイフンなし）</label>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
      </div><br>

  <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div><br>

  <div class="row">
        <label class="col-lg-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "encrypted_password" %>
        </div>
      </div><br>

  <div class="row">
        <label class="col-lg-3">パスワード（確認用）</label>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "encrypted_password" %>
        </div>
      </div><br>


  <div class="actions text-center">
    <%= f.submit "新規登録", class:"btn btn-success", style:"width: 200px;" %>
  </div>
<% end %>

<br><br>

<h5>既に登録済みの方</h5>
      <p>
        <%= link_to 'こちら', new_customer_session_path %>
        からログインしてください。
      </p>
