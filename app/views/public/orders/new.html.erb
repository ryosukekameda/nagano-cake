<div class="panel panel-warning">
  
  <div class="panel-heading">
    <h4><span class="label label-default">注文情報入力</span></h4>
  </div>
  
  <div class="panel-body">
    
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
    
      <h5>支払方法</h5>
      
        <span> </span><%= f.radio_button :method, 0, checked: "checked" %>
        <%= f.label 'クレジットカード' %><br>
        <span> </span><%= f.radio_button :method, 1 %>
        <%= f.label '銀行振込' %>
      
      <h5>お届け先</h5>
        
        <span> </span><%= f.radio_button :a_method, 0, checked: "checked" %>
        <%= f.label '自身の住所' %><br>
        <span> </span>〒<%= @customer.postal_code %>
        <%= @customer.address %><br>
        <span> </span><%= @customer.last_name %>
        <%= @customer.first_name %><br>
        
        <span></span><%= f.radio_button :a_method, 2 %>
			  <%= f.label :新しいお届け先 %><br>
			  <div class="form-group col-xs-12">
				<%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3 control-label"  %>
				<%= f.text_field :postal_code, class: "col-xs-4 form-control-static postal_code" %>
			</div>
			<div class="form-group col-xs-12">
				<%= f.label :"住所", class: "col-xs-3 control-label" %>
				<%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
			</div>
			<div class="form-group col-xs-12">
				<%= f.label :"宛名", class: "col-xs-3 control-label" %>
				<%= f.text_field :name, class: "col-xs-4 form-control-static name"%>
			</div>
        
        <%= f.submit "確認画面へ進む", class:"btn btn-primary col-xs-6 col-xs-offset-1" %>
        
    <% end %>
  </div>
  
</div>