<br><br>

<div class="panel panel-warning">

  <div class="panel-heading">
    <h4><span class="label label-default">注文情報入力</span></h4>
  </div>
  
  <br>

  <div class="panel-body">

    <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>

      <h5 class="mb-3">支払方法</h5>

      <div class="form-group">
        <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
        <%= f.label 'クレジットカード' %><br>
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label '銀行振込' %>
      </div>

      <h5 class="mb-3 mt-4">お届け先</h5>

      <div class="form-group">
        <%= f.radio_button :a_method, 0, checked: "checked" %>
        <%= f.label '自身の住所' %><br>
        〒<%= @customer.postal_code %><br>
        <%= @customer.address %><br>
        <%= @customer.last_name %> <%= @customer.first_name %>
      </div>

      <div class="form-group">
        <%= f.radio_button :a_method, 1 %>
        <%= f.label :新しいお届け先 %><br>

        <%= f.label :"郵便番号(ハイフンなし)", class: "d-block mb-1" %>
        <%= f.text_field :postal_code %>

        <%= f.label :"住所", class: "d-block mb-1" %>
        <%= f.text_field :address, :size=>"70" %>

        <%= f.label :"宛名", class: "d-block mb-1" %>
        <%= f.text_field :name %>
      </div>

      <div class="text-center mt-4">
        <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
      </div>

    <% end %>
  </div>

</div>
