
  <div class="row">
    
    <div class="col-xs-5">
      <div class="item-content1">
        <%= image_tag @item.image, size: "200x200" %>
      </div>
    </div>
    
    <div class="col-xs-5">
      <%= form_for(@cart_item, url: cart_items_path(@item.id), method: :post) do |form| %>
      <h4><%= @item.name %></h4>
      <p><%= @item.introduction %></p>
    </div>
  </div>
    
    <div class="row">
      
      <div class="col-xs-5">
        <div class="item-content2", style="font-family: arial black">
          ¥ <%= ((@item.price_without_tax * 1.1).floor).to_s(:delimited, delimiter: ',') %> (税込)
          <span><%= form.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %></span>
        </div> 
      </div>
      
      <div class="col-xs-5">
        <p>
          <%= form.submit "カートに入れる", class:"btn btn-primary" %>
        </p>
      </div>
      <% end %>
    </div>
  