<div class="row">
  
  <div class="col-xs-5">
    <div class="item-content1">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
  </div>
  
  <div class="col-xs-5">
    
    <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>
  
      <h4><%= @item.name %></h4>
      <p><%= @item.introduction %></p>

      <div class="item-content2" style="font-family: arial black">
        ¥ <%= ((@item.price_without_tax * 1.1).floor).to_s(:delimited, delimiter: ',') %> (税込)
        <span><%= f.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %></span>
      </div>

      <p>
        <%= f.submit "カートに入れる", class:"btn btn-primary" %>
      </p>
    <% end %>

  </div>
  
</div>

  