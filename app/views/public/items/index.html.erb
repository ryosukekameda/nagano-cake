<br><br>

  <div class="row">
    
    <div class="col-12 text-left mb-4">
      <h4>商品一覧 (全 <%= @items_all.count %> 件)</h4>
    </div>
  </div>
          <div class="row">
            <% @items.each do |item| %>
              <div class="col-md-3 col-sm-6 mb-4">
                <div class="card">
                  <div class="card-body text-center">
                    <% if item.image.attached? %>
                      <%= link_to item_path(item.id) do %>
                      <%= image_tag item.image, class:"img-fluid", style:"max-height: 250px; width: auto;" %>
                      <% end %>
                    <% else %>
                      <%= link_to item_path(item.id) do %>
                      <%= image_tag 'no_image.jpg', class:"img-fluid", style:"max-height: 250px; width: auto;" %>
                    <% end %>
               <% end %>
               
            <h5 class="mt-3"><%= item.name %></h5>
            <p>
              ¥ <%= item.price_without_tax.to_s(:delimited, delimiter: ',') %>
            </p>
            
                  </div>
               </div>
           </div>
          <% end %>
       </div>     
  
  <div class="row mt-4">
    <div class="col-12 text-center">
      <%= paginate @items %>
    </div>
  </div>
  
